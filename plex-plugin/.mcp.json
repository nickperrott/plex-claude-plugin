{
  "$schema": "https://schema.mcp.run/config.schema.json",
  "mcpServers": {
    "plex-media-server": {
      "command": "uv",
      "args": [
        "--directory",
        "/Users/nick/conductor/workspaces/plex-claude-plugin/montreal-v1",
        "run",
        "--env-file",
        ".env",
        "plex-mcp"
      ],
      "metadata": {
        "display_name": "Plex Media Server",
        "description": "Manage your Plex Media Server - library scanning, media file naming, and automated ingestion",
        "version": "0.1.0",
        "author": "Nick Perrott",
        "license": "MIT",
        "documentation_url": "https://github.com/yourusername/plex-claude-plugin",
        "configuration_required": [
          "PLEX_URL",
          "PLEX_TOKEN",
          "TMDB_API_KEY",
          "PLEX_MEDIA_ROOT"
        ],
        "configuration_optional": [
          "PLEX_INGEST_DIR",
          "PLEX_AUTO_INGEST",
          "PLEX_CONFIDENCE_THRESHOLD"
        ]
      }
    }
  }
}
